<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="CER01" build="1">
    <device name="left_arm_calibrator" type="parametricCalibratorEth">
        <params file="general.xml" />
                
        <group name="GENERAL">
            <param name="joints">  4  </param> <!-- the number of joints of the robot part -->
            <param name="deviceName"> Left_Arm_Calibrator </param>
        </group>

<group name="HOME">
<param name="positionHome">              0.03       0.03       0.03         0.00       </param>
<param name="velocityHome">              0.005      0.005      0.005       10.00       </param>
</group>                                                                  
                                                                          
<group name="CALIBRATION">                                                
<param name="calibrationType">           8          8          8           10          </param>
<param name="calibration1">              -1500      -1500      -1500       -250         </param>
<param name="calibration2">              700        700        700         0           </param>
<param name="calibration3">              0          0          0           0           </param>
<param name="calibration4">              0          0          0           0           </param>
<param name="calibration5">              0          0          0           0           </param>
<param name="calibrationZero">           0          0          0           85          </param>
<param name="calibrationDelta">          0          0          0           0           </param>
<param name="startupPosition">           0.03       0.03       0.03        0           </param>
<param name="startupVelocity">           0.007      0.007      0.007       15.0        </param>
<param name="startupMaxPwm">             1500        1500      1500        0           </param>
<param name="startupPosThreshold">       0.002       0.002     0.002       2           </param>
</group>

        <param name="CALIB_ORDER">(0 1 2)</param>
        <!-- <param name="CALIB_ORDER">(0 1 2) (3)</param> -->

        <action phase="startup" level="10" type="calibrate">
            <param name="target">cer_left_lower_arm_mc_wrapper</param>
        </action>

        <action phase="interrupt1" level="1" type="park">
            <param name="target">cer_left_lower_arm_mc_wrapper</param>
        </action>

        <action phase="interrupt3" level="1" type="abort" />

    </device>
</devices>
